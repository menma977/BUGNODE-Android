<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
  <item
      android:right="-15dp"
      android:left="-15dp">
    <rotate
        android:pivotX="50%"
        android:pivotY="50%"
        android:fromDegrees="90"
        android:toDegrees="-270">
      <shape
          android:shape="ring"
          android:thickness="5dp"
          android:useLevel="false">
        <gradient
            android:endColor="#6f4bf7"
            android:centerColor="@color/colorPrimaryLight"
            android:startColor="#6f4bf7"
            android:type="sweep"
            android:useLevel="false"/>
      </shape>
    </rotate>
  </item>

  <item
      android:right="-30dp"
      android:left="-30dp">
    <rotate
        android:pivotX="50%"
        android:pivotY="50%"
        android:fromDegrees="-90"
        android:toDegrees="270">
      <shape
          android:shape="ring"
          android:thickness="10dp"
          android:useLevel="false">
        <gradient
            android:endColor="#6f4bf7"
            android:centerColor="@color/colorPrimaryLight"
            android:startColor="#6f4bf7"
            android:type="sweep"
            android:useLevel="false"/>
      </shape>
    </rotate>
  </item>
</layer-list>